<!DOCTYPE html>
<html lang="ar" dir="rtl">

{{> head }}

<body>

    {{> header }}

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" style="height: 90vh;">
                <div class="position-sticky pt-3 sidebar-sticky">
                    {{> navbar }}
                </div>
            </nav>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="chartjs-size-monitor">
                    <div class="chartjs-size-monitor-expand">
                        <div class=""></div>
                    </div>
                    <div class="chartjs-size-monitor-shrink">
                        <div class=""></div>
                    </div>
                </div>

                <div style="margin-top: 70px;">
                    {{#if message}}
                    <p class="alert alert-success">{{message}}</p>
                    {{/if}}
                    <div class="card">
                        <div class="card-header"><b>تعديل البيانات</b></div>
                        <div class="card-body">
                            {{#each rows }}
                            <form method="post" action="/editDepartement/{{this.id}}">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="departement">المصلحة</label>
                                            <input type="text" name="departement" id="departement"
                                                class="form-control" value="{{this.departement}}"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="user">المستخدم</label>
                                            <input type="text" name="user" id="user" class="form-control" value="{{this.user}}"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="materiel">العتاد المعلوماتي</label>
                                            <input type="text" name="materiel" id="materiel" class="form-control" value="{{this.materiel}}"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="desc_materiel">خصائص العتاد المعلوماتي</label>
                                            <input type="text" name="desc_materiel" id="desc_materiel"
                                                class="form-control" value="{{this.desc_materiel}}"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="address_ip">Address IP</label>
                                            <input type="text" name="address_ip" id="address_ip" class="form-control" value="{{this.address_ip}}"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="needs">الاحتياجات</label>
                                            <textarea type="text" name="needs" id="needs"
                                                class="form-control">{{this.needs}}</textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <input type="submit" name="submit_button" class="btn btn-primary" value="تأكيد">
                                </div>
                            </form>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>

</html>