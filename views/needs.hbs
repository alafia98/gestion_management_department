<!DOCTYPE html>
<html lang="ar" dir="rtl">

{{> header }}

<body id="body">

  <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" href="/home" novalidate>إدارة العتاد المعلوماتي</a>

    <div class="navbar-nav">
      <div class="nav-item text-nowrap">
        <a class="nav-link px-3" href="/logout">تسجيل الخروج</a>
      </div>
    </div>
  </header>

  <div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" style="height: 90vh;">
        <div class="position-sticky pt-3 sidebar-sticky">
          {{> navbar }}
        </div>
      </nav>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="chartjs-size-monitor">
          <div class="chartjs-size-monitor-expand">
            <div class=""></div>
          </div>
          <div class="chartjs-size-monitor-shrink">
            <div class=""></div>
          </div>
        </div>
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">صفحة الاحتياجات</h1>

          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <button type="button" class="btn btn-sm btn-outline-secondary" onclick="printPage()">طباعة</button>
              <button style="margin-right: 10px" type="button" class="btn btn-sm btn-outline-secondary"
                id="downloadExcel" onclick="fnExportToExcel('xlsx', 'myfirstsheet')">اكسيل</button>
            </div>
          </div>
        </div>

        <div class="table-responsive" id="data">
          <table class="table table-striped table-sm" style="text-align: center;" id="tableExport">
            <thead>
              <tr class="bg-dark shadow" style="color:white">
                <th scope="col">الاحتياجات</th>
                <th scope="col">المصلحة</th>
                <th scope="col">المستخدم</th>
              </tr>
            </thead>
            <tbody>
              {{#each rows}}
              <tr>
                <td>{{this.needs}}</td>
                <td>{{this.departement}}</td>
                <td>{{this.user}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>

  <script type="text/javascript">
    function printPage() {
      var body = document.getElementById('body').innerHTML;
      var data = document.getElementById('data').innerHTML;
      document.getElementById('body').innerHTML = data;
      window.print();
    };

    document.getElementById('downloadExcel').addEventListener('click', function () {
      var table2excel = new Table2Excel();
      table2excel.export(document.querySelectorAll("#tableExport"));
    });
  </script>

</body>

</html>